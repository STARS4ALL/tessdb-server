# Original tessdb package file. 
# It will be customized by Ansible.
/var/dbase/tess.db {
	copy
	daily
	dateext
	rotate 1
	missingok
	notifempty
	prerotate
		/usr/bin/systemctl kill -s USR1 tessdb.service > /dev/null 2>/dev/null || true
		/bin/sleep 2
	endscript
	postrotate
		/usr/bin/systemctl kill -s USR2 tessdb.service > /dev/null 2>/dev/null || true 
	endscript
}

/var/log/tessdb.log {
	su root root
	daily
	dateext
	rotate 30
	missingok
	notifempty
#	compress
#	delaycompress
	copytruncate
}